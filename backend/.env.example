# --- Server Configuration ---
PORT=5000

# --- Database Configuration ---
# Example for a local PostgreSQL database
DATABASE_URL="postgresql://postgres:your_password@localhost:5432/salonebaskit_db"

# --- Authentication ---
# Use a long, random, and secret string for signing JSON Web Tokens
JWT_SECRET="replace_with_a_long_random_string_for_jwt"

# --- Node Environment ---
# Set to 'development' for local work, 'production' for deployment
NODE_ENV="development"

# --- Frontend URL ---
